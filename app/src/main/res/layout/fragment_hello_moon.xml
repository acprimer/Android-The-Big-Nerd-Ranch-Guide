<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.edu.buaa.yaodh.android_the_big_nerd_ranch_guide.hello_moon.HelloMoonFragment">

    <ImageView
        android:src="@drawable/armstrong_on_moon"
        android:contentDescription="@string/hello_moon_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:layout_weight="1"/>

    <TableRow
        android:gravity="bottom|center"
        android:layout_weight="0">
        <Button
            android:id="@+id/play_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_moon_play"/>
        <Button
            android:id="@+id/stop_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_moon_stop"/>
    </TableRow>

</TableLayout>
